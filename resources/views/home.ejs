<!-- Hero Section -->
<section class="hero py-16">
        <div class="container mx-auto flex justify-between items-center pl-12">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold">Don't Wait !</h1>
                <button class="px-6 py-2 text-white font-bold mt-4 btn-primary rounded-tl-lg rounded-tr-lg rounded-bl-lg rounded-br-lg">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png" alt="hero">
            </div>
        </div>
</section>

<!-- Menu -->
<section class="menu container mx-auto py-8"> 
        <h1 class="text-lg font-bold mb-8 text-center">ALL PIZZAS</h1>
        <div class="grid grid-cols-4 gap-y-12 gap-x-16">
            <% pizzas.forEach(function(pizza) { %>
                <div class="w-64">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="pizza">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                        <div class="flex items-center justify-around mt-6">
                            <span>&#8377;<%= pizza.price %></span>
                            <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 flex items-center">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
</section>
